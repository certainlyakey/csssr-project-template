.checkcontrol
	position relative

	&__label
		@extends $mediumtext
		
	&__label:before
	&__label:after
		display block
		content ''
		position absolute
		top 0
		left 0
		background-repeat no-repeat
		
	&__input
		opacity 0 //not visibility hidden - it prevents tabbing
		
		&_checkbox 
			
			& + .checkcontrol__label:before
				sprite $checkboxempty
				top 4px

			&:checked + .checkcontrol__label:after
				sprite $checkboxchecked
				top -6px
				left 3px
			
		&_radio 

			& + .checkcontrol__label
				padding-left 22px			

			& + .checkcontrol__label:before
				sprite $radioempty
				top -15px

			&:checked + .checkcontrol__label:after
				sprite $radiochecked
				top -2px
				left 9px
				